{
    "manifest_version": 2,
    "name": "CommandK",
    "description": "Shortcuts for Google Calendar.",
    "version": "0.01",

    "browser_action": {
        "default_icon": "assets/icon16.png",
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },

    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],

    "permissions": ["activeTab"],

    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+K"
        }
      }
    }
}
